<%= provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="container">
	<div class="row">
		
	<div class="col-lg-6 col-lg-offset-3">
		<div class="well form-horizontal">
		<%= form_for(:session, url: sessions_path) do |f|  %>
			<div class="form-group">
				<%= f.label :email, class: "control-label col-lg-2" %>
				<%= f.email_field :email, class: "col-lg-8" %>
			</div>

			<div class="form-group">
				<%= f.label :password, class: "control-label col-lg-2" %>
				<%= f.password_field :password, class: "col-lg-8" %>
			</div>
			<p></p>
			<div class="form-group">
				<%= f.submit "Sign in", class: "btn btn-md btn-custom col-lg-offset-2" %>

			<p></p>
			<p class="col-lg-offset-2">New user? <%= link_to "Sign up now!", signup_path %></p>
			</div>
		<% end %>

	</div>
	</div>
	</div>
</div>
