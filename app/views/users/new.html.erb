<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="container">
	<div class="col-lg-8 col-lg-offset-2">
		<div class="well form-horizontal">
			<%= form_for @user do |f| %>
				
				<%= render 'shared/error_messages', :object => f.object %> 
				<div class="form-group">
					<%= f.label :name, "Name",  class: "control-label col-lg-2" %>
					<%= f.text_field :name, class: "col-lg-8" %>
				</div>
				<div class="form-group">
					<%= f.label :email, class: "control-label col-lg-2" %>
					<%= f.text_field :email, class: "col-lg-8" %>
				</div>

				<div class="form-group">
					<%= f.label :password, class: "control-label col-lg-2" %>
					<%= f.password_field :password, class: "col-lg-8" %>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, "Confirmation", class: "control-label col-lg-2" %>
					<%= f.password_field :password_confirmation, class: "col-lg-8" %>
				</div>
				<div class="center">
					<%= f.submit "Create my account", class: "btn btn-default btn-custom"  %>
				</div>				
			<% end %>
		</div>
	</div>
</div>
